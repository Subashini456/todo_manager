<main class="TodoPageMain">
  <article>
    <h1 class="TodoPage-title">My Todos-list</h1>

    <%= form_with(url: "/todos",method: "post") do %>
      <input class="AddTodo-text" type="text" placeholder="What's new" name="todo_text">
      <input class="AddTodo-date" type="date" name="due_date">
      <input class="AddTodo-button" type="submit" value="Add" >
    <% end %>

    <%= render partial: "todos-section", locals: {
      section_title: "Overdue",
      todos: @todos.overdue,
      show_due_date: true
    } %>

    <%= render partial: "todos-section", locals: {
      section_title: "Due Today",
      todos: @todos.due_today,
      show_due_date: false
    } %>

    <%= render partial: "todos-section", locals: {
      section_title: "Due Later",
      todos: @todos.due_later,
      show_due_date: true
    } %>

  </article>
</main>
